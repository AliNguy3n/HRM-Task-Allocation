<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="600.0" prefWidth="999.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="StaffList.StaffListController">
    <children>
        <TableView fx:id="staffTable" layoutX="13.0" layoutY="14.0" prefHeight="500.0" prefWidth="1000.0">
            <columns>
                <TableColumn fx:id="avatarCol" prefWidth="75.0"/>
                <TableColumn fx:id="fullNameCol" prefWidth="75.0" text="Full Name"/>
                <TableColumn fx:id="staffIdCol" prefWidth="75.0" text="StaffId"/>
                <TableColumn fx:id="phoneNumberCol" prefWidth="75.0" text="Phone Number"/>
                <TableColumn fx:id="emailCol" prefWidth="75.0" text="Email"/>
                <TableColumn fx:id="departmentCol" prefWidth="75.0" text="Department"/>
                <TableColumn fx:id="positionCol" prefWidth="75.0" text="Position"/>
                <TableColumn fx:id="editCol" prefWidth="75.0" text="Edit"/>
                <TableColumn fx:id="deleteCol" prefWidth="75.0" text="Delete"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
        <!-- Thêm nút "Add" phía dưới TableView -->
        <Button fx:id="addButton" layoutX="850.0" layoutY="530.0" prefWidth="100.0" text="Add Staff"/>
    </children>
</AnchorPane>
