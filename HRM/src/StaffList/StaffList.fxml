<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.StackPane?>
<StackPane prefHeight="600.0" prefWidth="999.0" styleClass="anchor-pane" stylesheets="@StaffList.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="StaffList.StaffListController">
    <children>
        <VBox prefHeight="600.0" prefWidth="999.0">
            <!-- Thông tin tiêu đề bảng -->
            <Label styleClass="table-title" text="Staff List" />

                        <!-- Thêm HBox cho tìm kiếm và lọc -->
            <HBox alignment="CENTER_RIGHT" spacing="10">
                <padding>
                    <Insets bottom="10" left="10" right="10" top="10" />
                </padding>
                <TextField fx:id="searchField" promptText="Search by name..." />
                <ComboBox fx:id="departmentFilter" promptText="Filter by Department">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="All" />
                            <String fx:value="Marketing" />
                            <String fx:value="Operation" />
                            <String fx:value="Sale" />
                            <String fx:value="HR" />
                            <String fx:value="Strategy" />
                            <String fx:value="Out Sourcing" />
                        </FXCollections>
                    </items>
                </ComboBox>
                <ComboBox fx:id="positionFilter" promptText="Filter by Position">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="All" />
                            <String fx:value="Executive" />
                            <String fx:value="Team Leader" />
                            <String fx:value="Manager" />
                            <String fx:value="Head" />
                            <String fx:value="Director" />
                            <String fx:value="BOD" />
                            <String fx:value="CEO" />
                        </FXCollections>
                    </items>
                </ComboBox>
                <Button fx:id="addButton" styleClass="button" text="Add Staff" textAlignment="CENTER" />
            </HBox>

                        <!-- TableView -->
            <TableView fx:id="staffTable" styleClass="table-view" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="avatarCol" prefWidth="75.0" />
                    <TableColumn fx:id="fullNameCol" prefWidth="150.0" styleClass="center-text" text="Full Name" />
                    <TableColumn fx:id="staffIdCol" prefWidth="100.0" styleClass="center-text" text="Staff ID" />
                    <TableColumn fx:id="phoneNumberCol" prefWidth="125.0" styleClass="center-text" text="Phone Number" />
                    <TableColumn fx:id="emailCol" prefWidth="200.0" styleClass="center-text" text="Email" />
                    <TableColumn fx:id="departmentCol" prefWidth="150.0" styleClass="center-text" text="Department" />
                    <TableColumn fx:id="positionCol" prefWidth="150.0" styleClass="center-text" text="Position" />
                    <TableColumn fx:id="editCol" prefWidth="75.0" styleClass="center-text" text="Edit" />
                    <TableColumn fx:id="deleteCol" prefWidth="75.0" styleClass="center-text" text="Delete" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
                <VBox.margin>
                    <Insets />
                </VBox.margin>
            </TableView>
        </VBox>
    </children>
</StackPane>
