<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<StackPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Manage.ManagerManageController">
    <children>
        <VBox fillWidth="true" spacing="10.0">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <children>
                <HBox spacing="10.0" HBox.hgrow="ALWAYS">
                    <VBox alignment="CENTER" spacing="10.0" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                        <children>
                            <HBox alignment="CENTER" spacing="10.0">
                                <PieChart fx:id="staffMonthlyMark" prefHeight="300.0" prefWidth="300.0" />
                                <VBox spacing="10.0">
                                    <ComboBox fx:id="employeeComboBox" promptText="Select Employee" />
                                    <ComboBox fx:id="monthFilterComboBox" promptText="Select Month" />
                                </VBox>
                            </HBox>
                            <Text fx:id="chartTitle" styleClass="chart-title" text="Monthly total Evaluation mark" />
                        </children>
                    </VBox>
                </HBox>
                <TableView fx:id="evaluationTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="monthCol" prefWidth="75.0" text="Month" />
                        <TableColumn fx:id="staffNameCol" prefWidth="75.0" text="Staff Name" />
                        <TableColumn fx:id="departmentCol" prefWidth="75.0" text="Department" />
                        <TableColumn fx:id="positionCol" prefWidth="75.0" text="Position" />
                        <TableColumn fx:id="monthlyMarkCol" prefWidth="75.0" text="Monthly Mark" />
                        <TableColumn fx:id="totalMarkCol" prefWidth="75.0" text="Total Mark" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </children>
        </VBox>
    </children>
</StackPane>
