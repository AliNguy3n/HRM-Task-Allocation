<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<StackPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Manage.ManageController" stylesheets="@Manage.css">
    <children>
        <VBox spacing="10.0" fillWidth="true">
            <padding>
                <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
            </padding>
            <children>
                <HBox spacing="10.0" HBox.hgrow="ALWAYS">
                    <VBox spacing="10.0" prefWidth="200.0" VBox.vgrow="ALWAYS" alignment="CENTER">
                        <children>
                            <ImageView fx:id="avatarImage" fitHeight="200.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" styleClass="image-view" />
                            <Text fx:id="staffName" text="Nghia Le" styleClass="staff-info-title" />
                            <Text fx:id="staffDepartment" text="marketing" styleClass="staff-info" />
                            <Text fx:id="staffPosition" text="Director" styleClass="staff-info" />
                            <Text fx:id="staffTotalMark" text="7.33" fontSmoothingType="LCD" styleClass="staff-total-mark">
                                <font>
                                    <Font size="48.0" />
                                </font>
                            </Text>
                            <Text fx:id="totalMarkTitle" text="Total Mark" styleClass="staff-info" />
                        </children>
                    </VBox>
                    <VBox spacing="10.0" VBox.vgrow="ALWAYS" alignment="CENTER" HBox.hgrow="ALWAYS">
                        <children>
                            <HBox spacing="10.0" alignment="CENTER">
                                <PieChart fx:id="staffMonthlyMark" prefHeight="300.0" prefWidth="300.0" />
                                <ComboBox fx:id="monthFilterComboBox" promptText="Select Month" />
                            </HBox>
                            <Text fx:id="chartTitle" text="Monthly total Evaluation mark" styleClass="chart-title" />
                        </children>
                    </VBox>
                </HBox>
                <TableView fx:id="evaluationTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="monthCol" prefWidth="75.0" text="Month" />
                        <TableColumn fx:id="taskNameCol" prefWidth="75.0" text="Task Name" />
                        <TableColumn fx:id="startedCol" prefWidth="75.0" text="Started" />
                        <TableColumn fx:id="endedCol" prefWidth="75.0" text="Ended" />
                        <TableColumn fx:id="AssignedByCol" prefWidth="75.0" text="Assigned By" />
                        <TableColumn fx:id="markCol" prefWidth="75.0" text="Mark" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </children>
        </VBox>
    </children>
</StackPane>
