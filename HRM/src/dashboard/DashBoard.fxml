<BorderPane fx:id="dashBoardPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="650.0" prefWidth="1200.0" stylesheets="@../CSS/Dashboard.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dashboard.DashBoardController">
   <left>
      <VBox fx:id="navDashBoardLeft" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <HBox fx:id="paneTitleNav" alignment="CENTER" prefHeight="60.0">
               <children>
                  <ImageView fx:id="imageLogo" fitHeight="60.0" fitWidth="70.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../asset/LogoIconOnly.png" />
                     </image>
                  </ImageView>
                  <ImageView fx:id="imageTitle" fitHeight="60.0" fitWidth="130.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../asset/LogoTitle.png" />
                     </image>
                  </ImageView>
               </children>
            </HBox>
            <ToggleButton fx:id="btnHome" alignment="CENTER_LEFT" mnemonicParsing="false" onAction="#handleDashBoardNav" prefHeight="34.0" prefWidth="200.0" text="Task Management">
               <font>
                  <Font name="Roboto Bold" size="16.0" />
               </font>
               <graphic>
                  <FontIcon fx:id="iKonHome" iconLiteral="fltfmz-tasks-app-20" iconSize="24" />
               </graphic>
               <toggleGroup>
                  <ToggleGroup fx:id="NavBar" />
               </toggleGroup>
            </ToggleButton>
            <ToggleButton fx:id="btnManage" alignment="CENTER_LEFT" mnemonicParsing="false" onAction="#handleDashBoardNav" prefHeight="34.0" prefWidth="200.0" text="Manage" toggleGroup="$NavBar">
               <font>
                  <Font name="Roboto Bold" size="16.0" />
               </font>
               <graphic>
                  <FontIcon fx:id="iKonManage" iconLiteral="fltfal-data-pie-20" iconSize="24" />
               </graphic>
            </ToggleButton>
            <ToggleButton fx:id="btnAccounts" alignment="CENTER_LEFT" mnemonicParsing="false" onAction="#handleDashBoardNav" prefHeight="34.0" prefWidth="200.0" text="Accounts" toggleGroup="$NavBar">
               <font>
                  <Font name="Roboto Bold" size="16.0" />
               </font>
               <graphic>
                  <FontIcon fx:id="iKonAccounts" iconLiteral="fltfmz-person-20" iconSize="24" />
               </graphic>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </ToggleButton>
            <ToggleButton fx:id="btnSettings" alignment="CENTER_LEFT" mnemonicParsing="false" onAction="#handleDashBoardNav" prefHeight="34.0" prefWidth="200.0" text="Settings" toggleGroup="$NavBar">
               <font>
                  <Font name="Roboto Bold" size="16.0" />
               </font>
               <graphic>
                  <FontIcon fx:id="iKonSettings" iconLiteral="fltfmz-settings-20" iconSize="24" />
               </graphic>
            </ToggleButton>
            <Button fx:id="btnLogout" alignment="TOP_LEFT" mnemonicParsing="false" onAction="#handleDashBoardNav" prefWidth="200.0" text="Logout">
               <graphic>
                  <FontIcon fx:id="iKonLogout" iconLiteral="fltfmz-sign-out-20" iconSize="26" />
               </graphic>
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
               <VBox.margin>
                  <Insets top="8.0" />
               </VBox.margin>
            </Button>
         </children>
         <BorderPane.margin>
            <Insets bottom="6.0" left="6.0" right="3.0" top="6.0" />
         </BorderPane.margin>
      </VBox>
   </left>
   <center>
      <BorderPane fx:id="dashboardView" BorderPane.alignment="TOP_LEFT">
         <BorderPane.margin>
            <Insets bottom="6.0" left="3.0" right="6.0" top="6.0" />
         </BorderPane.margin></BorderPane>
   </center>
</BorderPane>
